doctype
html
    head
        title Telerik Events System
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav
        .container
            .navbar-header
                a.navbar-brand(href="/") Events System
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href="/home") Home
                    if (currentUser)
                        li
                            a(href="/profile") #{currentUser.username}
                        li
                            a(href="/logout") Logout
                        li
                            a(href="/activeEvents") Active Events
                        li
                            a(href="/pastEvents") Past Events
                        li
                            a(href="/createEvent") Create an Event
                    else
                        li
                            a(href="/register") Register
                        li
                            a(href="/login") Login

        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}

            block main-content

        footer
            p.text-center
                | End to end Javascript applications exam 13.10.2014

        include scripts