extends ../../shared/layout

block main-content
    h2 #{events.type}:
    br
    if (events.collection.length)
        ul
            each event in events.collection
                li
                    a(href="#{event.url}")
                        h2 Title: #{event.title}
                    p Description #{event.description}
                    h3 Comments:
                    ul
                        each comment in event.comments
                            li #{comment}
    else
        h3 There are no #{events.type}!