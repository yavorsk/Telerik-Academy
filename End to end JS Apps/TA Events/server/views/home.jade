extends shared/layout
block main-content
    h1 Welcome!
    br
    if (passedEvents.length)
        h3 Passed events:
            ul
                each event in passedEvents
                    li
                        a(href="#{event.url}")
                            h2 Title: #{event.title}
                        p Description #{event.description}
                        h3 EventPoints: #{event.eventPoints}
                        h3 Comments:
                        ul
                            each comment in event.comments
                                li #{comment}
    else
        h3 There are no passed Events!

